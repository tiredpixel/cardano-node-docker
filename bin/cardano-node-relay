#!/bin/bash -eu

ADDRESS=${ADDRESS:-}
#-------------------------------------------------------------------------------
if [ -z "$ADDRESS" ]; then
    host_addr_=()
else
    host_addr_=(--host-addr "$ADDRESS")
fi

cardano-node run \
    --config "$CRD_CONF/config.json" \
    --database-path "$CRD_DATA/db" \
    "${host_addr_[@]}" \
    --port "$PORT" \
    --socket-path "$CRD_DATA/socket/cardano-node.socket" \
    --topology "$CRD_CONF/topology.json"
